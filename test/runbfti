EPATH=..
# Usage: ./bfti [options]
# options:
#   -h              help
#   -H              show assigned input values (debugging)?
#   -i <input_dir>  input directory path
#   -P              print directories?
#   -n <threads>    number of threads
#   -s              generate tree-summary DB?


echo "tree index to screen"
$EPATH/bfti -i testdirdup/testdir -P -n 2

echo "tree index to db"
$EPATH/bfti -i testdirdup/testdir -P -n 2 -s

$EPATH/querydb testdirdup/testdir "select * from treesummary;" 1 1 0
