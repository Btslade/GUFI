EPATH=..
echo "query to create db insert recs from entry query into out db old big files"
rm -f outdb*
# if you want to be fancy then use date functions to provide this in user readable date/time
$EPATH/bfq -i $1 -E "insert into sument select uidtouser(uid), path(), name, size, mtime from entries where type='f' and size>4 and mtime<1500000000;" -n $2 -O outdb -I "create table sument (username text, pathname text, name text, size int64, mtime int64);"
$EPATH/querydbn outdb "select username, pathname,name,size,mtime from vsument order by size;" 0 1 1 $2 sument
